<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Harmonica.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Harmonica.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Harmonica">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Window.Styles>
		<StyleInclude Source="/Styles/ImageButtons/PlayPauseButton.axaml"/>
		<StyleInclude Source="/Styles/ImageButtons/NextPreviousButton.axaml"/>
		<StyleInclude Source="/Styles/ImageButtons/ShuffleButton.axaml"/>
		<StyleInclude Source="/Styles/ImageButtons/RepeatButton.axaml"/>
	</Window.Styles>
	
	<Grid ColumnDefinitions="*,Auto"
				RowDefinitions="*,50"
				ShowGridLines="True">
		<!-- Player -->
		<!-- LocalFiles -->
		<!-- PlayerControls -->
		<Grid Grid.Row="1"  
					Grid.Column="0"
					Grid.ColumnSpan="2"
					RowDefinitions="Auto,*">
			
			
			<StackPanel Grid.Row="1"
									Orientation="Horizontal"
									VerticalAlignment="Center"
									HorizontalAlignment="Center">

				<Button Classes="ShuffleOffButton" Click="OnShuffleButton_Pressed"
								Width="32"
								Height="32"/>

				<Button Classes="PreviousButton" Click="OnPreviousButton_Pressed"
								Width="32"
								Height="32"/>
				
				<Button Classes="PlayButton" Click="OnPlayButton_Pressed"
								Width="32"
								Height="32"/>

				<Button Classes="NextButton" Click="OnNextButton_Pressed"
								Width="32"
								Height="32"/>

				<Button Classes="RepeatOffButton" Click="OnRepeatButton_Pressed"
								Width="32"
								Height="32"/>
				
			</StackPanel>
		</Grid>
	</Grid>
</Window>
